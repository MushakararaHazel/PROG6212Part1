@model CMCS.Models.ClaimStatus

@{
    string cls = Model switch
    {
        ClaimStatus.Draft => "badge gray",
        ClaimStatus.Submitted => "badge blue",
        ClaimStatus.UnderReview => "badge orange",
        ClaimStatus.Approved => "badge green",
        ClaimStatus.Rejected => "badge red",
        ClaimStatus.Paid => "badge purple",
        _ => "badge"
    };
}
<span class="@cls">@Model</span>

<style>
    .badge {
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 0.85rem;
        font-weight: 600;
    }

        .badge.gray {
            background: #e5e7eb;
            color: #374151;
        }

        .badge.blue {
            background: #dbeafe;
            color: #1e40af;
        }

        .badge.orange {
            background: #ffedd5;
            color: #c2410c;
        }

        .badge.green {
            background: #dcfce7;
            color: #166534;
        }

        .badge.red {
            background: #fee2e2;
            color: #991b1b;
        }

        .badge.purple {
            background: #ede9fe;
            color: #5b21b6;
        }
</style>