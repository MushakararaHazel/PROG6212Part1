@model CMCS.ViewModels.VerifyClaimVM
@{
    ViewData["Title"] = "Verify Claims";
    Layout = "_Layout";
}
<div class="card">
    <h2>Verify / Approve Claims</h2>
    <p><em>Prototype only – Approve/Reject buttons are disabled</em></p>
    <table>
        <thead>
            <tr>
                <th>Claim #</th>
                <th>Lecturer</th>
                <th>Period</th>
                <th>Total (ZAR)</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model.PendingClaims)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.LecturerName (@c.LecturerId)</td>
                    <td>@c.PeriodStart.ToShortDateString() → @c.PeriodEnd.ToShortDateString()</td>
                    <td>@c.TotalAmount</td>
                    <td><span class="badge orange">@c.Status</span></td>
                    <td>
                        <button class="btn-primary" disabled>Approve</button>
                        <button class="btn-secondary" disabled>Reject</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
